<h1>Listing expenses</h1>

<table>
  <tr>
  <% for column in Expense.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for expense in @expenses %>
  <tr>
  <% for column in Expense.content_columns %>
    <td><%=h expense.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => expense %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => expense %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => expense }, :confirm => 'Are you sure?' %></td>
  </tr>
<% end %>
</table>

