<html>
<head>
  <title>Expenses: <%= controller.action_name %> - Current period from <%= @period.start_date.strftime('%A %B %d %Y') %> to <%= @period.end_date.strftime('%A %B %d %Y') %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notice] %>
<p style="color: green; float: right" id="flash"><%= flash[:notice] %></p>
<% end %>
<% if flash[:alert] %>
<p style="color: white; background-color: red; float: right" id="flash"><%= flash[:alert] %></p>
<% end %>

<%= yield %>

</body>
</html>
